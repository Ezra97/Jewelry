@model IEnumerable<Jewelry.Models.Order>
@{
    ViewData["Title"] = "Orders";
}
<h1>הזמנות קודמות</h1>
<p>
    <a asp-action="Index">הזמנה חדשה</a>
</p>
@if (Model.Count() == 0)
{
    <h3>אין לך הזמנות קודמות</h3>
}
else
{
<table class="table">
    <thead>
        <tr>
            <th>תאריך הזמנה</th>
            <th>מספר פריטים</th>
            <th>מחיר</th>
            <th>כתובת למשלוח</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model)
{
        <tr>
            <td>@Html.DisplayFor(modelItem => item.date)</td>
            <td>@Html.DisplayFor(modelItem => item.CountJewels)</td>
            <td>@Html.DisplayFor(modelItem => item.PriceTotal)</td>
            <td>@Html.DisplayFor(modelItem => item.Address)</td>
        </tr>
}
    </tbody>
</table>
}