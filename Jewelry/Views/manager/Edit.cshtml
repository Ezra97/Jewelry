@model Jewelry.ViewModel.VMEditGroup
@{
    ViewData["Title"] = "Edit";
}
<h1>עריכת פרטי קבוצה</h1>
<h4>@Model.Group.Name</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="GroupID" hidden="hidden"/>
            <div class="form-group">
                <label asp-for="Group.Name" class="control-label">שם קבוצה</label>
                <input asp-for="Group.Name" class="form-control" />
                <span asp-validation-for="Group.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Group.Description" class="control-label">תיאור הקבוצה</label>
                <input asp-for="Group.Description" class="form-control" />
                <span asp-validation-for="Group.Description" class="text-danger"></span>
            </div>
            <div>
                @if (Model.Group.Photo != null)
                {
                    <img src="data:image;base64,@System.Convert.ToBase64String(Model.Group.Photo)" width="80" height="60" />
                    <h5>החלפת תמונה</h5>
                }
                else
                {
                    <h5>הוספת תמונה</h5>
                }
            </div>
            <div class="form-group">
                <label asp-for="File" class="control-label"></label>
                <input type="file" asp-for="File" class="form-control" />
                <span asp-validation-for="File" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="שמירת שינויים" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index">חזרה לחנות תכשיטים</a>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}